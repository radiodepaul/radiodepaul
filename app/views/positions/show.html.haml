%p#notice= notice

.page-header
  %h1 Position

%dl.dl-horizontal
  %dt
    %strong Name
  %dd= link_to @position.person.fullname, @position.person

  %dt
    %strong Title
  %dd= @position.title

  %dt
    %strong Email
  %dd= @position.email

  %dt
    %strong Phone
  %dd= @position.phone

  %dt
    %strong Office Hours
  %dd= @position.office_hours

.form-actions
  = link_to 'Edit', edit_position_path(@position), class: 'btn'
  = link_to 'Back', positions_path, class: 'btn'
