.page-header
  %h1 Positions

= link_to 'New', new_position_path, class: 'btn btn-primary'

%table.datatable.table.table-striped
  %thead
    %tr
      %th Photo
      %th Title
      %th Email
      %th Phone
      %th Office hours
      %th Person
      %th Actions

  %tbody
  - @positions.each do |position|
    %tr
      %td= image_tag(position.person.thumb_url)
      %td= link_to position.title, position
      %td= position.email
      %td= position.phone
      %td= position.office_hours
      %td= position.person.fullname
      %td
        = link_to 'Edit', edit_position_path(position), class: 'btn btn-mini'
        = link_to 'Destroy', position, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-mini'


= link_to 'New', new_position_path, class: 'btn btn-primary'
