- model_class = @podcast.class
.page-header
  %h1= t '.title', :default => model_class.model_name.human
%dl.dl-horizontal
  %dt
    %strong
      = model_class.human_attribute_name(:title)
      \:
  %dd= @podcast.title
  %dt
    %strong
      = model_class.human_attribute_name(:description)
      \:
  %dd= @podcast.description
  %dt
    %strong
      = model_class.human_attribute_name(:podcast_type)
      \:
  %dd= @podcast.podcast_type
  %dt
    %strong
      = model_class.human_attribute_name(:contributors)
      \:
  %dd= @podcast.contributors
  %dt
    %strong
      = model_class.human_attribute_name(:file)
      \:
  %dd= @podcast.file
  %dt
    %strong
      = model_class.human_attribute_name(:priority)
      \:
  %dd= @podcast.priority
.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), |
    podcasts_path, :class => 'btn'                           |
  -#
  = link_to t('.edit', :default => t("helpers.links.edit")), |
    edit_podcast_path(@podcast), :class => 'btn'             |
  -#
  = link_to t('.destroy', :default => t("helpers.links.destroy")),                                  |
    podcast_path(@podcast),                                                                         |
    :method => 'delete',                                                                            |
    :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), |
    :class => 'btn btn-danger'                                                                      |
