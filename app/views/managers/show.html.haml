.page-header
  %h1 Manager
%dl.dl-horizontal
  %dt
    %strong Name
  %dd= link_to @manager.person.name, @manager.person
  %dt
    %strong Position
  %dd= @manager.position
  %dt
    %strong Office Hours
  %dd= @manager.office_hours || 'None'
  %dt
    %strong Email
  %dd= @manager.email
  %dt
    %strong Phone Number
  %dd= @manager.phone_number
.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), |
    managers_path, :class => 'btn'                           |
  -#
  = link_to t('.edit', :default => t("helpers.links.edit")), |
    edit_manager_path(@manager), :class => 'btn'             |
  -#
  = link_to 'Delete',                                                                               |
    manager_path(@manager),                                                                         |
    :method => 'delete',                                                                            |
    :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), |
    :class => 'btn btn-danger'                                                                      |
