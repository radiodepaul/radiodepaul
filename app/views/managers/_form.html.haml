=semantic_form_for @manager, html: { class: 'form-horizontal' } do |f|
  =f.error_messages

  =f.inputs do
    =f.input :person, as: :select, collection: Hash[Person.all.map{|b| [b.last_first_name,b.id]}]
    =f.input :position
    =f.input :office_hours, input_html: { class: 'autogrow', rows: 10, cols: 80 }
    =f.input :email, as: :email
    =f.input :phone_number, as: :phone

  =f.actions do
    =f.action :cancel, label: 'Cancel', class: 'btn'
    =f.action :submit, label: 'Submit', class: 'btn'
